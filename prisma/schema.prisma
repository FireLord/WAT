generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  name          String
  email         String        @unique
  password      String
  ph_number     Int?
  account       Template[]
  contact       Contact[]
  sent_messages SentMessage[]
  otp Otp[]
}

model Otp{
  id            String        @id @default(cuid())
  user_id          String @unique
  otp Int
  updated_at DateTime @default(now())
  user             User          @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

enum Template_type {
  EXACT
  SIMILAR
  EXPERT
}

model Template {
  id               String        @id @default(cuid())
  user_id          String
  title            String
  preset_msg       String
  welcome_msg_only Boolean
  type             Template_type
  regex            String?
  toggle           Boolean       @default(true)
  delay            Int?
  tags             String[]
  user             User          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  sent_messages    SentMessage[]
}

model SentMessage {
  id          String   @id @default(cuid())
  user_id     String
  firt_msg    Boolean
  msg_body    String
  template_id String
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  master      Template @relation(fields: [template_id], references: [id], onDelete: Cascade)
}

model Contact {
  id              String   @id @default(cuid())
  user_id         String
  original_number String
  contact_name    String
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())
  user            User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
